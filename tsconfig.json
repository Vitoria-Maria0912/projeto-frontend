{
    "compilerOptions": {
      "target": "ES6", 
      "module": "commonjs",
      "strict": true,
      "moduleResolution": "node",
      "esModuleInterop": true,
      "skipLibCheck": true,
      "outDir": "./dist",
      "experimentalDecorators": true,
      "emitDecoratorMetadata": true
    },
    "include": [
      "./**/*.ts"
    ],
    "exclude": [
      "dist",
      "node_modules",
      "**/*.spec.ts"
    ]
  }